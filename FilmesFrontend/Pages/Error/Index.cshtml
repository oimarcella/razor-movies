@page "/erro/{statusCode:int?}"
@model FilmesFrontend.Pages.Error.IndexModel

@{
    ViewData["Title"] = "Erro";
}

<head>
    <link rel="stylesheet" href="~/css/error.css" />
</head>

<section id="error-dafault" class="error-page page-default">
    <div class="container">

        <div class="head d-flex justify-content-start align-items-center">
            <svg class="main-icon" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg"><g id="SVGRepo_bgCarrier" stroke-width="0"></g><g id="SVGRepo_tracerCarrier" stroke-linecap="round" stroke-linejoin="round"></g><g id="SVGRepo_iconCarrier"> <path d="M16 10.5C16 11.3284 15.5523 12 15 12C14.4477 12 14 11.3284 14 10.5C14 9.67157 14.4477 9 15 9C15.5523 9 16 9.67157 16 10.5Z" fill="#ffffff"></path> <ellipse cx="9" cy="10.5" rx="1" ry="1.5" fill="#ffffff"></ellipse> <path d="M22 12.3006C22 6.61173 17.5228 2 12 2C6.47715 2 2 6.61173 2 12.3006V19.723C2 21.0453 3.35098 21.9054 4.4992 21.314C5.42726 20.836 6.5328 20.9069 7.39614 21.4998C8.36736 22.1667 9.63264 22.1667 10.6039 21.4998L10.9565 21.2576C11.5884 20.8237 12.4116 20.8237 13.0435 21.2576L13.3961 21.4998C14.3674 22.1667 15.6326 22.1667 16.6039 21.4998C17.4672 20.9069 18.5727 20.836 19.5008 21.314C20.649 21.9054 22 21.0453 22 19.723V16.0118" stroke="#ffffff" stroke-width="1.5" stroke-linecap="round"></path> </g></svg>
            <div class="d-flex flex-column">
                <h1>Ops, algo deu errado.</h1>
                <p>Estamos trabalhando para corrigir.</p>
                <a asp-page="/Index">Voltar para início</a>
            </div>
        </div>

        <div class="alert alert-danger">
            <p><strong>Mensagem de Erro:</strong> @Model.ErrorMessage</p>
            @if (Model.IsDevelopment)
            {
                <p><strong>Detalhes:</strong> @Model.ErrorDetails</p>
            }
        </div>
    </div>
</section>