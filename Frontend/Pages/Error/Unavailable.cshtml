@page "/servico-indisponivel"
@model FilmesFrontend.Pages.Error.UnavailableModel
@{
    ViewData["Title"] = "Indisponível temporariamente";
}
<head>
    <link rel="stylesheet" href="~/css/error.css" />
</head>

<section id="error-unavailable" class="error-page page-default">
    <div class="container">

        <div class="head d-flex justify-content-start align-items-center">
            <svg class="main-icon" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg"><g id="SVGRepo_bgCarrier" stroke-width="0"></g><g id="SVGRepo_tracerCarrier" stroke-linecap="round" stroke-linejoin="round"></g><g id="SVGRepo_iconCarrier"> <path d="M6.30928 9C8.59494 5 9.96832 3 12 3C14.3107 3 15.7699 5.58716 18.6883 10.7615L19.0519 11.4063C21.4771 15.7061 22.6897 17.856 21.5937 19.428C20.4978 21 17.7864 21 12.3637 21H11.6363C6.21356 21 3.50217 21 2.40626 19.428C1.45498 18.0635 2.24306 16.2635 4.05373 13" stroke="#ffffff" stroke-width="1.5" stroke-linecap="round"></path> <path d="M12 8V13" stroke="#ffffff" stroke-width="1.5" stroke-linecap="round"></path> <circle cx="12" cy="16" r="1" fill="#ffffff"></circle> </g></svg>
            <div class="d-flex flex-column">
                <h1>Houve um problema para acessar os serviços.</h1>
                <p>Estamos trabalhando para reestabelecer tudo, tente de novo mais tarde.</p>
                <a asp-page="/Index">Voltar para início</a>
            </div>
        </div>

        <div class="alert alert-danger">
            <p><strong>Mensagem de Erro:</strong> @Model.ErrorMessage</p>
            @if (Model.IsDevelopment)
            {
                <p><strong>Detalhes:</strong> @Model.ErrorDetails</p>
            }
        </div>
    </div>
</section>


